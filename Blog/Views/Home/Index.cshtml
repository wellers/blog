@model Blog.Models.HomeViewModel
@{
	ViewBag.Title = "Prompt";
}

<div class="well">
	<div class="row">
		<div class="title span8">
			<h1>Hello, world!</h1>
			<p>Welcome to the whimsical meanderings of a North-West UK based Dot Net developer. Major areas of focus include: C#, 
			ASP.NET MVC, Razor, JavaScript, JQuery, and many more.</p>
			@Html.ActionLink("Learn more...", "About", "Home", 
							new {area = "", controller = "Home"}, new { @class = "btn btn-info btn-large" })
		</div>
	</div>
</div>
@foreach (var b in Model.BlogEntries)
{
	<div class="blogEntry">
		<div class="row">
			<div class="span8">
				<h4>@Html.Raw(HttpUtility.HtmlDecode(b.Title))</h4>
			</div>       
		</div>    
		<hr />
		<div class="row">
			<div class="span8">@Html.Raw(HttpUtility.HtmlDecode(b.Entry))</div>
        </div>
        <hr />
        <div class="row">
			<div class="span8 footer">
				@if (b.Tags != null)
				{
					<span class="span6" style="margin-left: 0px;">
						<small><strong>Tags:&nbsp;</strong></small>
						@foreach (var x in b.Tags)
						{
							<span class="badge badge-info">@(x.Name)</span><text>&nbsp;</text>
						}
					</span>			
				}
				<span>
					<small><strong>Posted:&nbsp;</strong>@b.PostedDate.ToString(new System.Globalization.CultureInfo("en-GB"))</small>
				</span>
			</div>
		</div>
	</div>
}