@model Blog.Models.HomeViewModel
@{
	ViewBag.Title = "Prompt";
}

<div class="well">
	<h1>Hello, world!</h1>
	<p>Welcome to the whimsical meanderings of a North-West UK based Dot Net developer. Major areas of focus include: C#, 
    ASP.NET MVC, Razor, JavaScript, JQuery, and many more.</p>
	@Html.ActionLink("Learn more...", "About", "Home",
						new {area = "", controller = "Home"}, new { @class = "btn btn-info btn-large" })
</div>
@foreach (var b in Model.BlogEntries)
{
	<div class="blogEntry">
		<div class="row">
			<div class="span5">
				<h4>@b.Title</h4>
			</div>
			<div class="span3">
				<h5>Posted: @b.PostedDate.ToString(new System.Globalization.CultureInfo("en-GB"))</h5>
			</div>            
		</div>    
		<hr />    
		<div class="row">
			<div class="span8">@Html.Raw(HttpUtility.HtmlDecode(b.Entry))</div>
		</div>
	</div>
}