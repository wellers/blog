@using Blog.Models;
@model TagsViewModel

<div class="well sidebar-nav tags">
	<ul class="nav nav-list">
		<li class="nav-header">Tags</li>
		@foreach (var t in Model.Tags)
		{ 
			<li class="tag">
				<small>@Html.ActionLink(t.Name, "Tag", new { controller = "Home", tag = t.LookupID })</small>
			</li>
		}
	</ul>
</div>