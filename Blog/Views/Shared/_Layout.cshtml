<!DOCTYPE html>
<html>
	<head>
		<title>@(ViewBag.Title) - Paul David Welbourne</title>
		<meta charset="utf-8" />
		<meta name="google-site-verification" content="-t3MR8WrwLcdCOcsoFpscJwugK2WHCRfreO7BubgrdM" />

		<meta name="title" content="Prompt" />
		<meta name="description" 
			  content="Welcome to the whimsical meanderings of a North-West UK based Dot Net developer. 
			  Major areas of focus include: C#, ASP.NET MVC, Razor, JavaScript, JQuery, and many more..." />
		<meta name="keywords" content="C#, ASP.NET MVC, Razor, JavaScript, JQuery" />
		<meta name="author" content="Paul David Welbourne" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="shortcut icon" href="@Url.Content("~/Content/Images/favicon.ico")" type="image/ico" />

		<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
		<style type="text/css">
			body { padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */ }
		</style>
		
		<link href="@Url.Content("~/Content/SyntaxHighlighter/shCore.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/SyntaxHighlighter/shThemeDefault.css")" rel="stylesheet" type="text/css" />

		<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/custom.css")" rel="stylesheet" type="text/css" />


		<script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>

		<!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
		<!--[if lt IE 9]>
			<script src="@Url.Content("~/Scripts/html5shiv.min.js")"></script>
		<![endif]-->

		<script src="@Url.Content("~/Scripts/SyntaxHighlighter/shCore.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/SyntaxHighlighter/shBrushCSharp.js")" type="text/javascript"></script>
	</head>

	<body>
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					@* TODO: centralise the branding. *@
					@Html.ActionLink("prompt.", "Index", "Home", new { area = "", controller = "Home" }, new { @class = "brand" })
					<div class="nav-collapse collapse">
						<ul class="nav">
							<li>@Html.ActionLink("Home", "Index", new { area = "", controller = "Home" }, new { })</li>
							<li>@Html.ActionLink("About me", "About", new { area = "", controller = "Home" }, new { })</li>
							<li>@Html.ActionLink("Contact me", "Contact", new { area = "", controller = "Home" }, new { })</li>
						</ul>
					</div><!--/.nav-collapse -->
				</div>
			</div>
		</div>

		<div class="wrap container">
    		<div class="row">
				<div class="span9">
					@RenderBody()
				</div>
				<div class="span3">
					<div class="well sidebar-nav">
						<ul class="nav nav-list">
							<li class="nav-header">Posts by month</li>
							<li>@Html.ActionLink("April (2013)", "Archive", new { controller = "Home", Year = 2013, Month = 4 })</li>
							<li>@Html.ActionLink("March (2013)", "Archive", new { controller = "Home", Year = 2013, Month = 3 })</li>
						</ul>
					</div>
					@{ Html.RenderAction("Tags", new { area = "", controller = "Home" }); }
					@{ Html.RenderAction("RecentPosts", new { area = "", controller = "Home" }); }
					@{ Html.RenderAction("Index", "TwitterFeed", new { area = "", controller = "TwitterFeed" }); }
				</div>	
			</div>
		</div>
		<div id="footer">
			<div class="container">
				<p class="muted credit">Developed by Paul David Welbourne. Powered by <a href="http://twitter.github.com/bootstrap/" target="_blank">Bootstrap</a>.</p>
			</div>
		</div>
		<script type="text/javascript">
		    SyntaxHighlighter.all();

		    var disqus_shortname = 'promptwellers';

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function () {
                var s = document.createElement('script'); s.async = true;
                s.type = 'text/javascript';
                s.src = '//' + disqus_shortname + '.disqus.com/count.js';
                (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
            } ());
        </script>
	</body>
</html>